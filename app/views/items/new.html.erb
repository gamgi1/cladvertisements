<h1> <%= @category.category_name %></h1>
<%= form_for @item, url: category_items_path(@category) do |f| %>
  <div class="form-group">
    <%= f.label(:name_of_item, class: 'form-label') %>
    <%= f.text_field(:name_of_item, class: 'form-control input-lg') %>
  </div>
  <div class="form-group">
    <%= f.label(:price, class: 'form-label') %>
    <%= f.text_field(:price, class: 'form-control input-lg') %>
  </div>
  <div class="form-group">
    <%= f.label(:contact, class: 'form-label') %>
    <%= f.text_field(:contact, class: 'form-control input-lg') %>
  </div>
  <div class="form-group">
    <%= f.label(:quality, class: 'form-label') %>
    <%= f.select(:quality, options_for_select(['New', 'Acceptable', 'Poor', 'Damaged']),{},{class: 'form-control input-lg'}) %>
  </div>
  <div class="form-group">
    <%= f.label(:description, class: 'form-label') %>
    <%= f.text_field(:description, class: 'form-control input-lg') %>
  </div>
  <div class="form-group">
     <%= f.file_field :avatar %>
  </div>
  <div class="form-group">
    <%= f.submit('Add Item', class: 'btn btn-lg btn-success') %>
  </div>
<% end %>
<%= link_to 'Back', category_items_path(@category.id) %>
