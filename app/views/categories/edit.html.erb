<h1 class="page-header text-center"><%= @category.category_name %></h1>
<p class="lead">Change the category specs</p>

<%= form_for(@category, html: {class: 'form'}) do |f| %>
<div class="form-group">
  <%= f.label(:category_name, class: 'form-label') %>
  <%= f.text_field(:category_name, class: 'form-control input-lg') %>
</div>
<div class="form-group">
  <%= f.file_field :general_img %>
</div>
<div class="form-group">
  <%= f.submit('Save Changes', class: 'btn btn-lg btn-success') %>
</div>
<% end %>

<p><a href="<%= categories_path %>" class="btn btn-primary" role="button">Back</a></p>
